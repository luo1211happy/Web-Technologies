<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.usc.bob.forecast.ResultActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/button_menu"
                >
                <Button
                    android:text="More Details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/details"
                    android:layout_gravity="left"
                    />
                <Button
                    android:text="View Map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/map"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    />
                <ImageButton
                    android:id="@+id/share"
                    android:adjustViewBounds="true"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/fb_icon"
                    android:layout_gravity="right"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/button_menu">
                <ImageSwitcher
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:id="@+id/current_weather">

                </ImageSwitcher>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textSize="30sp"
                    android:id="@+id/summary"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/temperature"
                        android:textSize="40sp"
                        android:text="65"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/degree"
                        android:text="â„‰"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:id="@+id/min_max_temp"
                    android:textSize="25sp"
                    android:text="L:45| H:65"
                    />
                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50sp"
                    android:layout_centerHorizontal="true"
                    android:stretchColumns="1"
                    >
                    <TableRow>
                        <TextView
                            android:text="Precipitation"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="25sp"
                            android:layout_column="1"
                            />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:layout_gravity="right"
                            android:id="@+id/precipitation"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        >
                        <TextView
                            android:text="Chance of Rain"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="25sp"
                            android:layout_column="1"
                            />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:layout_gravity="right"
                            android:id="@+id/chance_of_rain"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="@dimen/activity_vertical_margin">
                        <TextView
                            android:text="Wind Speed"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="25sp"
                            android:layout_column="1"/>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:layout_gravity="right"
                            android:id="@+id/wind_speed"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="@dimen/activity_vertical_margin">
                        <TextView
                            android:text="Dew Point"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="25sp"
                            android:layout_column="1"
                            />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:layout_gravity="right"
                            android:id="@+id/dew_point"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="@dimen/activity_vertical_margin">
                        <TextView
                            android:text="Humidity"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="25sp"
                            android:layout_column="1"
                            />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:layout_gravity="right"
                            android:id="@+id/humidity"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="@dimen/activity_vertical_margin">
                        <TextView
                            android:text="Visibility"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="25sp"
                            android:layout_column="1"
                            />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:layout_gravity="right"
                            android:id="@+id/visibility"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="@dimen/activity_vertical_margin">
                        <TextView
                            android:text="Sunrise"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="25sp"
                            android:layout_column="1"
                            />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:layout_gravity="right"
                            android:id="@+id/sunrise"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="@dimen/activity_vertical_margin">
                        <TextView
                            android:text="Sunset"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="25sp"
                            android:layout_column="1"
                            />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:layout_gravity="right"
                            android:id="@+id/sunset"
                            />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>



</RelativeLayout>
